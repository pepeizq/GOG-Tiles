<Page
    x:Class="GOG_Tiles.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GOG_Tiles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loading="Page_Loading">

    <Page.Resources>
        <DataTemplate x:Key="dataTemplateTilesGOG">
            <Grid Width="224" Height="103" Margin="1">
                <Border BorderThickness="1" BorderBrush="Black">
                    <Image Source="{Binding Path=imagen}" ToolTipService.ToolTip="{Binding Path=titulo}" Stretch="UniformToFill" />
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#FFE4E4E4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="3">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="Gray" Offset="0.5" />
                        <GradientStop Color="LightGray" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid Grid.Row="0" Margin="10">
                <TextBlock x:Name="tbDirectorioGOG" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="buttonAñadirCarpetaGOG" Grid.Column="0" Padding="10" Background="Transparent" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="Add" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonAñadirCarpetaGOGTexto"/>
                    </StackPanel>
                </Button>
                <Button x:Name="buttonVolverTiles" Visibility="Collapsed" Grid.Column="0" Padding="10" Background="Transparent" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="Back" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonVolverTilesTexto"/>
                    </StackPanel>
                </Button>
                <Grid x:Name="gridCargando" Grid.Column="1" Padding="10" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" >
                        <ProgressRing IsActive="True" Margin="0,0,10,0" />
                        <TextBlock x:Name="gridCargandoTexto"/>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="checkboxTilesGOGTitulo" Grid.Column="2" Padding="10,0" HorizontalAlignment="Right" VerticalContentAlignment="Center" />
                <AppBarSeparator Grid.Column="3" />
                <Button x:Name="buttonVotaciones" Grid.Column="4" Padding="10" Background="Transparent">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="Like" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonVotacionesTexto"/>
                    </StackPanel>
                </Button>
                <Button x:Name="buttonCompartir" Grid.Column="5" Padding="10" Background="Transparent">
                    <StackPanel Orientation="Horizontal" >
                        <FontIcon Glyph="&#xE72D;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonCompartirTexto"/>
                    </StackPanel>
                </Button>
                <AppBarSeparator Grid.Column="6" />
                <Button x:Name="buttonContactar" Grid.Column="7" Padding="10" Background="Transparent">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="Contact" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonContactarTexto"/>
                    </StackPanel>
                </Button>
                <Button x:Name="buttonWeb" Grid.Column="8" Padding="10" Background="Transparent">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon Symbol="More" Margin="0,0,10,0" VerticalAlignment="Center" />
                        <TextBlock x:Name="buttonWebTexto"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid x:Name="gridTilesGOG" Margin="10" Grid.Row="2" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ScrollViewer x:Name="scrollViewerGridGOG" Grid.Row="0" VerticalScrollMode="Auto" Visibility="Collapsed" >
                    <GridView x:Name="gridViewTilesGOG" ItemTemplate="{StaticResource dataTemplateTilesGOG}" IsItemClickEnabled="True" Padding="0,0,15,0" />
                </ScrollViewer>
            </Grid>

            <Grid x:Name="gridWebContacto" Margin="10" Grid.Row="2" Visibility="Collapsed">
                <WebView x:Name="webViewContact" Source="https://pepeizqapps.com/contact/" />
            </Grid>

            <Grid x:Name="gridWeb" Margin="10" Grid.Row="2" Visibility="Collapsed">
                <WebView x:Name="webViewWeb" Source="https://pepeizqapps.com/" />
            </Grid>
        </Grid>
    </Grid>
</Page>
